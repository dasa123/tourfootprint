# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       MainPage.index

GET		/oauth/access_token?client_id={543391872364338}&client_secret={18b83f7c912e96e2a47f21f5f32f4939}&grant_type=client_credentials

# New Post page
GET     /newPost                             	NewPost.page

# New Post page
GET     /editPost                            	EditPost.page

# View Post page
GET     /viewPost                            	ViewPost.page

# My Posts page
GET     /myPosts                            	MyPosts.page

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
