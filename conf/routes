# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       MainPage.index
#GET     /test.html         staticFile:/public/html/test.html

# New Post page
GET     /newPost                             	NewPost.page
# Edit Post page
GET     /editPost                            	EditPost.page
# View Post page
GET     /viewPost                            	ViewPost.page

# My Posts page
GET     /myPosts                            	MyPosts.page
# Post Stream page
GET     /postStream                            	PostStream.page

# Search Results page
GET     /searchResults                          SearchResults.page

# My Profle page
GET     /myProfile                            	MyProfile.page
# View Profle page
GET     /viewProfile                            ViewProfile.page


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET     /about_us                          		Company.aboutUs
GET     /privacy_policy                     	Company.privacyPolicy
GET     /channel.html         staticFile:/public/html/channel.html
#GET     /			          staticFile:/public/html/test.html

GET     /tos			                     	Company.tos

*       /admin                                  module:crud

# Catch all
*       /{controller}/{action}                  {controller}.{action}
