# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       MainPage.index

GET		/facebook								Facebook.FB.Event.subscribe

GET     /channel			         			staticFile:/app/views/templates/channel.html

GET /oauth/access_token?
     client_id=218973444927818
    &client_secret=7b58f10f867b06bd6c49404978b4b3f
    &grant_type=client_credentials

GET /{user-id}/accounts

# New Post page
GET     /newPost                             	NewPost.page
# New Post page
GET     /editPost                            	EditPost.page
# View Post page
GET     /viewPost                            	ViewPost.page

# My Posts page
GET     /myPosts                            	MyPosts.page

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
